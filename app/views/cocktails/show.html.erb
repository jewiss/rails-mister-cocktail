<% if @cocktail.photo.attached? %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
<% else %>
  <%= image_tag "https://source.unsplash.com/1600x900/?cocktail-#{@cocktail.name}", alt: "alttext", style:"background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2))", class:"card-category img" %>
<% end %>

  <h1><%= @cocktail.name %></h1>
</div>
<div class="container">
  <h2> Doses </h2>
  <% @cocktail.doses.each do |dose| %>
    <p><%= dose.description %> de <%= dose.ingredient.name %>
      <%= link_to "🗑", dose_path(dose), method: :delete, data:{confirm:"Are your sure ?"} %>
    </p>
  <% end %>
  <%= link_to "⬅️", cocktails_path %>
  <%= link_to "➕", new_cocktail_dose_path(@cocktail) %>
  <%= link_to "🗑", cocktail_path(@cocktail), method: :delete, data:{confirm: "Are you sure ?"} %>
</div>
