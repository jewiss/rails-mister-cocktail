<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/1600x900/?cocktail-<%@cocktail.name%>)">
  <h1><%= @cocktail.name %></h1>
</div>
<div class="container">
  <h2> Doses </h2>
  <% @cocktail.doses.each do |dose| %>
    <p><%= dose.description %> de <%= dose.ingredient.name %>
      <%= link_to "🗑", dose_path(dose), method: :delete, data:{confirm:"Are your sure ?"} %>
    </p>
  <% end %>
  <%= link_to "⬅️", root_path %>
  <%= link_to "➕", new_cocktail_dose_path(@cocktail) %>
</div>
